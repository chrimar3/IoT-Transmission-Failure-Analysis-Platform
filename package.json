{
  "name": "cu-bems-iot-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest --config=config/jest.config.js",
    "test:unit": "jest __tests__/unit --config=config/jest.config.js",
    "test:integration": "jest __tests__/integration --config=config/jest.config.js",
    "test:watch": "jest --watch --config=config/jest.config.js",
    "test:coverage": "jest --coverage --config=config/jest.config.js",
    "test:ci": "jest --ci --coverage --watchAll=false --config=config/jest.config.js",
    "db:test": "node tools/deployment/test-supabase-connection.js",
    "db:setup": "node tools/deployment/setup-supabase-schema.js",
    "db:status": "node tools/deployment/check-supabase-status.js",
    "db:migrate": "psql $DATABASE_URL -f config/database/001-core-schema.sql -f config/database/002-materialized-views.sql -f config/database/003-rls-policies.sql",
    "env:check": "node tools/deployment/validate-env.js",
    "screenshots": "node tools/deployment/generate-screenshots.js",
    "docs:images": "npm run screenshots",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf .next dist coverage",
    "validate": "npm run typecheck && npm run lint && npm run test:ci"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@supabase/auth-helpers-nextjs": "^0.8.7",
    "@supabase/supabase-js": "^2.39.0",
    "csv-parser": "^3.2.0",
    "date-fns": "^3.0.6",
    "dotenv": "^17.2.2",
    "lucide-react": "^0.294.0",
    "next": "14.2.15",
    "next-auth": "^4.24.5",
    "puppeteer": "^24.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "recharts": "^2.10.1",
    "stripe": "^14.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.2.15",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
